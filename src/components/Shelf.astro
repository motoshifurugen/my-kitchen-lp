---
import PageSection from "./PageSection.astro";
import { sections, illustrations } from "../constants/content";

const { shelf } = sections;
---
<PageSection id={shelf.id} page={shelf.page} title={shelf.title} subtitle={shelf.subtitle} description={shelf.description}>
  <div class="grid gap-lg lg:grid-cols-[1.1fr_0.9fr]">
    <div class="grid gap-md">
      <div class="section-frame section-shadow grid gap-md p-lg" data-reveal>
        <div class="grid grid-cols-3 gap-sm">
          {shelf.cards.map((card) => (
            <div class="rounded-md bg-background-secondary p-sm text-center">
              <div class="mx-auto mb-sm h-10 w-10 rounded-full bg-background-tertiary"></div>
              <p class="text-caption text-text-secondary">{card}</p>
            </div>
          ))}
        </div>
        <p class="text-body text-text-secondary">{shelf.highlight}</p>
      </div>
    </div>
    <div class="relative space-y-md">
      <p class="text-body text-text-secondary">{shelf.fragments[0]}</p>
      <ul class="space-y-sm text-body text-text-secondary">
        {shelf.points.map((point) => (
          <li>{point}</li>
        ))}
      </ul>
      <img class="illus absolute -top-8 right-2 w-14" src={illustrations.cardStack} alt="" aria-hidden="true" />
      <img class="illus absolute top-20 -left-4 w-12" src={illustrations.bookmark} alt="" aria-hidden="true" />
      <img class="illus absolute -bottom-6 right-8 w-16" src={illustrations.ribbon} alt="" aria-hidden="true" />
    </div>
  </div>
</PageSection>
