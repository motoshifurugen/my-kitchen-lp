---
import PageSection from "./PageSection.astro";
import { gallery, illustrations } from "../constants/content";
---
<PageSection
  id={gallery.id}
  page={gallery.eyebrow}
  title={gallery.title}
  subtitle={null}
  description={gallery.description}
  descriptionClass="text-body text-text-secondary"
>
  <div class="relative">
    <div class="snap-gallery flex gap-sm overflow-x-auto pb-md">
      {gallery.screens.map((screen) => (
        <figure class="snap-item min-w-[180px] max-w-[220px] flex-1" data-reveal>
          <div class="relative p-sm">
            <img class="w-full rounded-md bg-transparent" src={screen.src} alt={screen.label} loading="lazy" />
            <figcaption class="absolute left-0 top-3 rounded-none bg-accent-primary px-sm py-xs text-caption text-button-primary-text">
              {screen.label}
            </figcaption>
          </div>
        </figure>
      ))}
    </div>
  </div>
</PageSection>
