---
const {
  id,
  page,
  title,
  subtitle,
  description,
  eyebrow,
  titleClass,
  subtitleClass,
  eyebrowClass,
  descriptionClass
} = Astro.props;
---
<section id={id} class="section-anchor px-screen-x py-2xl">
  <div class="mx-auto max-w-6xl space-y-lg">
    <div class="space-y-xs">
      {page ? <p class="book-label">{page}</p> : null}
      {eyebrow ? <p class={eyebrowClass ?? "text-caption text-text-tertiary tracking-wide"}>{eyebrow}</p> : null}
      <h2 class={`font-display tracking-wide ${titleClass ?? "text-heading"}`}>{title}</h2>
      {subtitle ? (
        <p class={subtitleClass ?? "text-caption text-text-secondary"}>{subtitle}</p>
      ) : null}
    </div>
    {description ? (
      <p class={descriptionClass ?? "text-body text-text-secondary max-w-3xl"}>{description}</p>
    ) : null}
    <div>
      <slot />
    </div>
  </div>
</section>
