---
import { cta, storeBadges, hero } from "../constants/content";
import FaqSection from "./FaqSection.astro";
import StoreBadgeGroup from "./StoreBadgeGroup.astro";
---
<section id={cta.id} class="section-anchor px-screen-x py-2xl">
  <div class="mx-auto max-w-6xl space-y-xl">
    <div class="section-frame section-shadow p-xl space-y-lg" data-reveal>
      <div class="space-y-sm">
        <p class="book-label">{cta.eyebrow}</p>
        <h2 class="font-display text-heading tracking-wide">{cta.title}</h2>
        <p class="text-body text-text-secondary">{cta.description}</p>
      </div>
      <div class="space-y-sm">
        <StoreBadgeGroup disabled />
        <div class="flex flex-wrap gap-sm">
          {hero.announceLinks.map((link) => (
            <a
              class="section-frame section-shadow inline-flex h-10 w-10 items-center justify-center rounded-md bg-background-secondary"
              href={link.href}
              aria-label={link.label}
            >
              <img class="h-4 w-4" src={link.iconSrc} alt={link.iconAlt} loading="lazy" />
            </a>
          ))}
        </div>
      </div>
      <div class="border-t border-black/10 pt-md space-y-sm text-caption text-text-secondary">
        <div>
          <a href={cta.contact.href}>{cta.contact.label}</a>
        </div>
        <div class="flex flex-wrap gap-md">
          {cta.legal.map((item) => (
            <a href={item.href}>{item.label}</a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
